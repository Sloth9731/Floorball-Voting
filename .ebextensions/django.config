option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: floorball_voting.wsgi:application
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: floorball_voting.settings 
    PYTHONPATH: "/var/app/current:$PYTHONPATH"
  aws:elasticbeanstalk:environment:proxy:staticfiles:
    /static: "static" # This is the path where your static files are collected
    /media: "media" # This is the path where your media files are stored if you have any

packages:
  yum:
    git: [] # Example of how to ensure git is installed if needed

container_commands:
  01_migrate:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py migrate"
    leader_only: true
  02_collectstatic:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py collectstatic --noinput"
    leader_only: true
  03_createsu:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py createsuperuser --noinput"
    test: "source /var/app/venv/*/bin/activate && python3 manage.py shell -c 'from django.contrib.auth import get_user_model; User = get_user_model(); exit(0 if User.objects.filter(username=\"admin\").exists() else 1)'"
    leader_only: true

# More customization can be added depending on your needs.
